<div class="row">
  <div class="col-md-2">

  </div>
  <div class="col-md-8">
        <%= bootstrap_form_for @recipe, html: { multipart: true } do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

            <div class="form-group">
              <%= f.text_field :name , :class => 'form-control', placeholder: "Name of recipe" %>

            </div>
            <div class="form-group">
              <%= f.text_area :origin , :class => 'form-control', :rows => 6, placeholder: "Where's this recipe from?" %>

            </div>

            <div class="form-group">
              <%= f.text_area :ingredients , :class => 'form-control', :rows => 6, placeholder: "List of ingredients" %>
            </div>
            <div class="form-group">
              <%= f.text_area :description , :class => 'form-control', :rows => 6, placeholder: "How is it cooked?" %>
            </div>
            <div class="form-group">
              <%= f.file_field :image , :class => 'form-control'%>
            </div>
            <div class="actions">
              <%= f.submit :html => {:class => 'btn-custom'}%>
            </div>

  </div>
<% end %>
  <div class="col-md-2">

  </div>
</div>
